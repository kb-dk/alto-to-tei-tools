#!/usr/bin/perl -w

use strict;

use Getopt::Long;

my $bibliography = "./bibliografi-luxdorph.xml";

my $result = GetOptions (
    "bibliography=s"     => \$bibliography
);



my $saxon_path = $ENV{'SAXON_PATH'};
my $saxon = "java -jar $saxon_path";

while(my $file = <alto_file_lists/*.xml>) {

    my $tei_file = $file;
    $tei_file =~ s/alto_file_lists/tei_dir/;
    print "doing $file\n";
    system("$saxon $bibliography altototei.xsl alto_file=$file | xmllint --format - > $tei_file");

}

print "postprocessing:\n";

system("./utilities/traverse-and-transform.pl");
